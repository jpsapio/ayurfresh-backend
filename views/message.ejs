<!-- views/message.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %> - Ayurfresh</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f0f4f8;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }
    .card {
      background: white;
      padding: 30px 40px;
      border-radius: 12px;
      box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
      text-align: center;
      max-width: 400px;
    }
    .card h1 {
      font-size: 22px;
      margin-bottom: 12px;
      color: #2d6cdf;
    }
    .card p {
      font-size: 16px;
      color: #444;
    }
    .btn {
      margin-top: 20px;
      display: inline-block;
      background: #2d6cdf;
      color: white;
      padding: 10px 18px;
      border-radius: 6px;
      text-decoration: none;
    }
  </style>
</head>
<body>
  <div class="card">
    <h1><%= title %></h1>
    <p><%= message %></p>
    <% if (redirectUrl) { %>
      <a href="<%= redirectUrl %>" class="btn">Go Back</a>
    <% } %>
  </div>
</body>
</html>
